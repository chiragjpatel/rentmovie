
@{
    ViewBag.Title = "New Rental";
}

<h2>New Rental</h2>

<div class="jumbotron">

    @using (Ajax.BeginForm("New", "Rental", new AjaxOptions
            {
                AllowCache = false,
                Confirm = "Success",
                HttpMethod = "HttpPost",
                OnFailure = "",
                OnSuccess = ""

            }))
            {
        <div class="form-group">
            <label>Customer</label>
            <input id="customer" type="text" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label>Movie</label>
            <input id="movie" type="text" value="" class="form-control" />
        </div>
                <button type="submit" class="btn btn-success btn-lg"> Rent Movies  </Button>

                <ul id="movies" class="list-group">

                </ul>
    }

</div>

@section scripts
{
    @Scripts.Render("~/bundles/jquery.unobtrusive")

    <script>
        var vm = {
            movieids : []
        };
        $(document).ready(function() {

            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'

                }

            });
            $('#customer').typeahead(
                {
                    minLength: 1,
                    highlight: true,
                    hint: false,
                    limit:10


                },
                {
                    name: 'customers',
                    display: 'name',
                    source: customers

                }).on("typeahead:select",
                function(e, customer) {
                    vm.cutomerId = customer.id;
                });

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'

                }
            });

            $('#movie').typeahead(
                {
                    minLength: 1,
                    highlight: true,
                    hint: false,
                    limit:10

                },
                {
                    name: 'movies',
                    display: 'name',
                    source: movies

                }).on("typeahead:select",
                function (e, movie) {
                    $("#movies").append("<li>" + movie.name + "</li>");
                    $("#movies").typeahead("val", "");
                    vm.movieids.push(movie.id);
                });
        });


    </script>
}
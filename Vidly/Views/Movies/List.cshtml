@model List<Vidly.Models.Movie>

<h2>Movies</h2>
@Html.ActionLink("Create New Movie", "Create","Movies", null, new {@class= "btn btn-success"})

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <td>Name</td>
        <td>Genre</td>
        <td>Release Date</td>
        <td>Stock Qty.</td>
        <td>Remove</td>



    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
            <td>@movie.ReleaseDate.ToString("D")</td>
            <td>@movie.StockQty</td>
            <td>@Html.ActionLink("Delete", "Delete", "Movies", new {id=movie.Id}, new {@class="btn btn-success btn-sm"})</td>



        </tr>


    }
    </tbody>
</table>
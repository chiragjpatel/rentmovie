@using System.Diagnostics.Eventing.Reader
@model List<Vidly.Models.Customer>

<h2>Customers</h2>
@Html.ActionLink("New Customer", "Create","Customers",null, new {@class="btn btn-success"})
<table class="table table-striped table-bordered table-hover">
    <thead><tr><th>Picture</th><th>Customer Name</th><th>Membership Type</th><th>Delete</th></tr></thead>
    @foreach (var customer in Model)
    {
        <tbody>
        <tr>
            <td width="50px">
                @if (customer.Image == null)

                {
                    @Html.ActionLink("ADD", "UploadImage", "Customers", new { id = customer.Id }, new { @class = "btn btn-primary" })
                }
                @if (customer.Image != null)
                {
                    <img src="Index/ViewImage/@customer.Id" alt="Add picture"/>
                }
            </td>
            <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new {id = customer.Id}, null)</td>
            <td>@customer.MembershipType.Name</td>
            <td>@Html.ActionLink("Delete", "Delete", "Customers", new {id = customer.Id}, new {@class = "btn btn-info"})</td>

        </tr>
        </tbody>
    }
</table>
